- id = printer_service_guide.id
. id = "new_printer_row_#{id}"
  td = printer_service_guide.id
  td = printer_service_guide.vendor
  td = printer_service_guide.model
  td = printer_service_guide.color
  td = printer_service_guide.type_of_system
  td = printer_service_guide.sheet_size
  td = printer_service_guide.fuser_life_count
  td 
    = button_to "Добавить принтер клиенту", '', class: 'btn btn-secondary', 'data-toggle': "collapse", 'data-target': "##{id}", 'aria-expanded': "false", 'aria-controls': "collapse_form"
    .collapse id = "#{id}"
      = simple_form_for Printer.new, remote: true do |f|
        .table-responsive
          table class="table table-hover table-sm"
            tr
              td Дополнительные данные
              td = f.input :additional_data, label: false
            tr 
              td Серийный номер
              td = f.input :serial_number, label: false
            tr
              td Пробег печки
              td = f.input :fuser_life_count, label: false
              = hidden_field_tag :company_id, "#{company_id ||= ''}", class: 'company_id_input'
              = hidden_field_tag :printer_service_guide_id, id
            tr
              td = f.submit 'Добавить', class: "btn btn-secondary btn-sm"